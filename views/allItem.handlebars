<div style="float: right;">
    <a href="/product/add" class="btn btn-success">Create a new Item +</a>
</div>
<br>
<table class="table table-dark">
    <br>
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Catalog Number</th>
            <th scope="col">Name Item</th>
            <th scope="col">Supplier</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
            <th scope="col">Description</th>
            <th scope="col">Quantity</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <th scope="row">{{id}}</th>
            <th scope="row">{{catalogNumber}}</th>
            <th scope="row">{{nameItem}}</th>
            <th scope="row">{{supplier}}</th>
            <th scope="row">{{category}}</th>
            <th scope="row">{{price}}</th>
            <th scope="row">{{description}}</th>
            <th scope="row">{{quantity}}</th>
            <th scope="row">
                <form action="/product/delete/{{id}}" method="POST">
                    <input type="submit" class="btn btn-danger btn-sm" value="Delete">
                </form>
                <a href="/product/edit/{{id}}" class="btn btn-warning">Edit</a>
            </th>
        </tr>
        {{/each}}
    </tbody>
</table>