<div class="row g-0">
    <div class="row g-3">
        <form action="/customer/edit/{{id}}" method="POST" class="row g-4">
            <input type="text" name="id" value="{{id}}" hidden>
            <div class="col-5">
                <label for="identify" class="form-label">ID</label>
                <input type="text" class="form-control" name="identify" value="{{identify}}">
            </div>
            <br>
            <div class="col-5">
                <label for="firstName" class="form-label">First Name</label>
                <input type="text" class="form-control" name="firstName" value="{{firstName}}">
            </div>
            <br>
            <div class="col-5">
                <label for="lastName" class="form-label">Last Name</label>
                <input type="text" class="form-control" name="lastName" value="{{lastName}}">
            </div>
            <div class="col-5">
                <label for="mail" class="form-label">Email</label>
                <input type="email" class="form-control" name="mail" value="{{mail}}">
            </div>
            <br>
            <br>
            <div class="col-5">
                <label for="address" class="form-label">Address</label>
                <input type="text" class="form-control" name="address" value="{{address}}">
            </div>
            <br>
            <div class="col-5">
                <label for="phone" class="form-label">Phone</label>
                <input type="text" class="form-control" name="phone" value="{{phone}}">
            </div>
            <br>
            <div class="col-5">
                <label for="receipt" class="form-label">Receipt</label>
                <input type="text" class="form-control" name="receipt" value="{{receipt}}">
            </div>
            <br>
            <div class="col-8">
                <input type="submit" class="btn btn-primary" value="Save">
            </div>
        </form>
    </div>
</div>